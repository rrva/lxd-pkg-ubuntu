[Unit]
Description=Container hypervisor based on LXC
After=cgmanager.service lxc.service
Requires=cgmanager.service lxc.service lxd-unix.socket lxd-tcp.socket

[Service]
ExecStart=/usr/bin/lxd --group lxd --tcp [::]:8443 --logfile=/var/log/lxd/lxd.log
KillMode=process
TimeoutStopSec=40
KillSignal=SIGPWR
Restart=on-failure
LimitNOFILE=1048576
LimitNPROC=1048576

[Install]
Also=lxd-unix.socket lxd-tcp.socket
